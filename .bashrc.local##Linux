# Thinkpad backlight control
bloff () {
echo 0 | sudo tee /sys/class/leds/tpacpi\:\:kbd_backlight/brightness
}

blon () {
  echo 1 | sudo tee /sys/class/leds/tpacpi\:\:kbd_backlight/brightness
}

# HiDPI font scaling on/off
hidpion () {
  gsettings set org.gnome.desktop.interface text-scaling-factor 1.2
}

hidpioff () {
  gsettings set org.gnome.desktop.interface text-scaling-factor 1
}

# Rhythbox CLI control
pl () {
  dbus-send --type=method_call --dest=org.mpris.MediaPlayer2.rhythmbox /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Play
}

pp () {
  dbus-send --type=method_call --dest=org.mpris.MediaPlayer2.rhythmbox /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Pause
}

# Backup
backupto () {
  rsync --verbose --progress --stats --compress --rsh=/usr/bin/ssh --recursive --times --perms --links --delete=during --exclude=Volumes --exclude=Music --exclude=Downloads --exclude=Dropbox --exclude=.gvfs --exclude=.dbus --exclude=.cache --exclude=.config/google-chrome --exclude snap --exclude=.local --exclude=.dropbox --exclude=.git-credential-cache --exclude=.config/configstore --exclude=.xsession-errors  ~/ deepak@$1:backups/cottongeeks/
}

gnome () {
  XDG_SESSION_TYPE=wayland exec dbus-run-session  gnome-session
}

nv() {
  nvr --nostart --servername `nvr --serverlist` "$@"
}

# Default Ubuntu prompt
PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '

# If set, the pattern "**" used in a pathname expansion context will
# match all files and zero or more directories and subdirectories.
shopt -s globstar

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# alias to copy text on terminal
alias pbcopy="xsel -b"

# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc).
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

# Tilix VTE
if [ $TILIX_ID ] || [ $VTE_VERSION ]; then
  source /etc/profile.d/vte.sh
fi

